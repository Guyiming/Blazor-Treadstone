
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeReuseTabsRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" AuthorizingLayout="@typeof(MyAuthorizingLayout)">
                <NotAuthorized>
                    @if (context.User.Identity.IsAuthenticated)
                    {
                        <p>禁止访问，你没有这个页面的访问授权</p>
                    }
                    else
                    {
                        //跳转认证
                        <RedirectToLogin />
                    }
                </NotAuthorized>
                <Authorizing>
                    <p>认证检测中............</p>
                </Authorizing>
            </AuthorizeReuseTabsRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

<AntContainer />
